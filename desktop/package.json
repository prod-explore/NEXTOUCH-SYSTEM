{
  "name": "nextouch",
  "version": "1.0.6",
  "description": "Use your phone as a wireless touchpad for PC",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "tsc && electron .",
    "build": "tsc && electron-builder --win",
    "dev": "tsc && electron ."
  },
  "author": "Nextouch",
  "license": "MIT",
  "type": "commonjs",
  "build": {
    "appId": "pl.futumore.nextouch",
    "productName": "Nextouch",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": true,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "include": "build/installer.nsh"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "src/native/InputController.exe",
        "to": "assets/InputController.exe"
      }
    ]
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/qrcode": "^1.5.6",
    "@types/ws": "^8.18.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "express": "^5.2.1",
    "qrcode": "^1.5.4",
    "ws": "^8.19.0"
  }
}